<UserControl
    x:Class="Plantech.Bim.PhaseVisualizer.UI.Controls.Toggle.SwitchToggleControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Height="Auto">
    <UserControl.Resources>
        <Style x:Key="SwitchToggleButtonStyle" TargetType="ToggleButton">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderBrush" Value="Transparent" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Padding" Value="0" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Grid Width="34" Height="18">
                            <Border
                                x:Name="Track"
                                Background="#FFD1D5DB"
                                BorderBrush="#FF9CA3AF"
                                BorderThickness="1"
                                CornerRadius="9" />
                            <Ellipse
                                x:Name="Thumb"
                                Margin="1,1,17,1"
                                Fill="White"
                                Stroke="#FF9CA3AF"
                                StrokeThickness="1" />
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="Track" Property="Background" Value="#FF0B57D0" />
                                <Setter TargetName="Track" Property="BorderBrush" Value="#FF0B57D0" />
                                <Setter TargetName="Thumb" Property="Margin" Value="17,1,1,1" />
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="Track" Property="Opacity" Value="0.55" />
                                <Setter TargetName="Thumb" Property="Opacity" Value="0.55" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>

        <ToggleButton
            x:Name="SwitchButton"
            Grid.Column="0"
            Margin="0"
            VerticalAlignment="Center"
            IsChecked="{Binding IsChecked, RelativeSource={RelativeSource AncestorType=UserControl}, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
            Style="{StaticResource SwitchToggleButtonStyle}"
            Checked="OnSwitchToggled"
            Unchecked="OnSwitchToggled" />

        <TextBlock
            Grid.Column="1"
            Margin="6,0,0,0"
            VerticalAlignment="Center"
            FontSize="12"
            FontWeight="SemiBold"
            Foreground="#FF374151"
            Text="{Binding Label, RelativeSource={RelativeSource AncestorType=UserControl}}" />

        <TextBlock
            x:Name="StateTextBlock"
            Grid.Column="2"
            Width="72"
            Margin="6,0,0,0"
            VerticalAlignment="Center"
            TextAlignment="Left"
            TextTrimming="CharacterEllipsis"
            FontSize="12"
            FontWeight="SemiBold"
            Foreground="#FF4B5563" />
    </Grid>
</UserControl>
